MDCard:
    orientation: "vertical"
    size_hint: None, None
    size: 300, 400
    pos_hint: {"center_x":0.5,"center_y":0.5}
    padding:25
    spacing:25
    elevation: 10
    #md_bg_color: 0, 1, 1,1
    #line_color:0.2, 0.2, 0.2, 0.8
            
    MDLabel:
        text: "Username"

    MDTextFieldRound:
        id: username
        hint_text: "Type your username"
        icon_right:"account"
        size_hint_x: None
        width: 200
        font_size: 18        

    MDLabel:
        text: "Password"

    MDTextFieldRound:
        id: password
        hint_text: "Type your Password"
        icon_right:"eye-off"
        password:True
        size_hint_x: None
        width: 200
        font_size: 18

    MDRoundFlatButton:
        text: "Login"
        font_size: 12
        pos_hint: {"center_x": 0.5}
        on_press: app.loginBtnClick()

    MDRoundFlatButton:
        text: "Sign Up"
        font_size: 12
        pos_hint: {"center_x": 0.5}
        on_press: app.signUpBtnClick()

<Content>:    
    orientation:"vertical"    
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        hint_text: "city"
        id:city
    MDTextField:
        id:street
        hint_text: "Street"
        
